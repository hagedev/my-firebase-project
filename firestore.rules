/**
 * @file Firestore Security Rules for AirCafe Application
 * @description This ruleset enforces a multi-tenant security model where users (cafe admins) can only access data belonging to their assigned tenant, except superadmins, who can access any data.
 *
 * Data Structure:
 * - /tenants/{tenantId}: Stores tenant-specific data.
 * - /users/{userId}: Stores user profiles, linked to a tenant by 'tenantId'.  User ID corresponds to Firebase Auth UID.
 * - /roles_superadmin/{userId}: Stores superadmin role information.
 * - /tenants/{tenantId}/menus/{menuId}: Stores menu items for a tenant.
 * - /tenants/{tenantId}/categories/{categoryId}: Stores menu categories for a tenant.
 * - /tenants/{tenantId}/orders/{orderId}: Stores orders for a tenant.
 * - /tenants/{tenantId}/tables/{tableId}: Stores tables for a tenant.
 *
 * Key Security Decisions:
 * - Users can only create their own profile using their Firebase Auth UID.
 * - Tenants are not directly created via the client; they are likely created via a separate admin interface or backend function.  No rules are provided to allow Tenant creation.
 * - Superadmin role overrides tenant-based restrictions.
 * - Data validation is relaxed in this prototyping phase to focus on authorization. Only key fields for relational integrity are validated.
 *
 * Denormalization for Authorization:
 * - User documents contain a 'tenantId' field, enabling rules to easily check if a user has access to a specific tenant's data.
 *
 * Structural Segregation:
 * - The separation of user data into /users/{userId} and tenant data into /tenants/{tenantId} helps maintain a clear separation of concerns and simplifies security rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner (userId matches request.auth.uid).
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an existing owner (userId matches request.auth.uid and the resource exists).
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
    }

    /**
     * @description getSelf
     */
    //function getSelf() {
    //    return get(/databases/$(database)/documents/users/$(request.auth.uid));
    //}

    /**
     * @description Checks if the user is a superadmin.
     */
    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/roles_superadmin/$(request.auth.uid));
    }

    /**
     * @description Checks if the user is a tenant admin and belongs to the tenant specified by tenantId.
     */
    function isTenantAdmin(tenantId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    /**
     * @description Allows only superadmins to perform an action, or tenant admins on resources belonging to their tenant.
     */
    function isSuperAdminOrTenantAdmin(tenantId) {
      return isSuperAdmin() || isTenantAdmin(tenantId);
    }

    /**
     * @description Stores cafe tenant profiles and configuration data.
     * @path /tenants/{tenantId}
     * @allow (get) Public access.
     * @allow (list) Public access.
     * @allow (create) Only superadmins can create tenants.
     * @allow (update) Only superadmins can update tenants.
     * @allow (delete) Only superadmins can delete tenants.
     * @deny (create) Non-superadmins cannot create tenants.
     * @deny (update) Non-superadmins cannot update tenants.
     * @deny (delete) Non-superadmins cannot delete tenants.
     * @principle Requires superadmin role for write access.  Read access is public.
     */
    match /tenants/{tenantId} {
      allow get, list: if true;
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    /**
     * @description Stores cafe admin user profiles.
     * @path /users/{userId}
     * @allow (get) Only the user themselves or a superadmin can get their profile.
     * @allow (list) Only superadmins can list all users.
     * @allow (create) Users can create their own profile if the userId matches their auth.uid.
     * @allow (update) Only the user themselves or a superadmin can update their profile.
     * @allow (delete) Only the user themselves or a superadmin can delete their profile.
     * @deny (create) Users cannot create profiles for other users.
     * @deny (update) Users cannot update other users' profiles.
     * @deny (delete) Users cannot delete other users' profiles.
     * @principle Enforces user ownership and allows superadmin override.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isSuperAdmin();
      allow list: if isSuperAdmin();
      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) || isSuperAdmin();
      allow delete: if isExistingOwner(userId) || isSuperAdmin();
    }

    /**
     * @description Stores superadmin role information. A document ID is the user's UID.
     * @path /roles_superadmin/{userId}
     * @allow (get) Only superadmins can get roles.
     * @allow (list) Only superadmins can list roles.
     * @allow (create) Only superadmins can create roles.
     * @allow (update) Only superadmins can update roles.
     * @allow (delete) Only superadmins can delete roles.
     * @deny (create) Non-superadmins cannot create roles.
     * @deny (update) Non-superadmins cannot update roles.
     * @deny (delete) Non-superadmins cannot delete roles.
     * @principle Enforces superadmin-only access.
     */
    match /roles_superadmin/{userId} {
      allow get, list, create, update, delete: if isSuperAdmin();
    }

    /**
     * @description Stores menu items for a specific tenant.
     * @path /tenants/{tenantId}/menus/{menuId}
     * @allow (get) Any signed-in user.
     * @allow (list) Any signed-in user.
     * @allow (create) Only tenant admins of the specified tenant.
     * @allow (update) Only tenant admins of the specified tenant.
     * @allow (delete) Only tenant admins of the specified tenant.
     * @deny (create) Non-tenant admins cannot create menu items.
     * @deny (update) Non-tenant admins cannot update menu items.
     * @deny (delete) Non-tenant admins cannot delete menu items.
     * @principle Enforces tenant-based access control.
     */
    match /tenants/{tenantId}/menus/{menuId} {
      allow get, list: if isSignedIn();
      allow create: if isTenantAdmin(tenantId) && request.resource.data.tenantId == tenantId;
      allow update: if isTenantAdmin(tenantId) && request.resource.data.tenantId == resource.data.tenantId;
      allow delete: if isTenantAdmin(tenantId) && resource.data.tenantId == data.tenantId;
    }

    /**
     * @description Stores menu categories for a specific tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (get) Any signed-in user.
     * @allow (list) Any signed-in user.
     * @allow (create) Only tenant admins of the specified tenant.
     * @allow (update) Only tenant admins of the specified tenant.
     * @allow (delete) Only tenant admins of the specified tenant.
     * @deny (create) Non-tenant admins cannot create categories.
     * @deny (update) Non-tenant admins cannot update categories.
     * @deny (delete) Non-tenant admins cannot delete categories.
     * @principle Enforces tenant-based access control.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create: if isTenantAdmin(tenantId) && request.resource.data.tenantId == tenantId;
      allow update: if isTenantAdmin(tenantId) && request.resource.data.tenantId == resource.data.tenantId;
      allow delete: if isTenantAdmin(tenantId) && resource.data.tenantId == data.tenantId;
    }

    /**
     * @description Stores orders placed at a specific tenant.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (get) Any signed-in user.
     * @allow (list) Only tenant admins or superadmins can list orders.
     * @allow (create) Any signed-in user.
     * @allow (update) Only tenant admins can update orders.
     * @allow (delete) Only tenant admins can delete orders.
     * @deny (create) Non-signed in users cannot create orders.
     * @deny (update) Non-tenant admins cannot update orders.
     * @deny (delete) Non-tenant admins cannot delete orders.
     * @principle Allows public read, tenant admin write access.
     */
    match /tenants/{tenantId}/orders/{orderId} {
      allow get: if isSignedIn();
      allow list: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow create: if isSignedIn() && request.resource.data.tenantId == tenantId;
      allow update: if isTenantAdmin(tenantId) && request.resource.data.tenantId == resource.data.tenantId;
      allow delete: if isTenantAdmin(tenantId) && resource.data.tenantId == data.tenantId;
    }

    /**
     * @description Stores tables for a specific tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (get) Any signed-in user.
     * @allow (list) Only tenant admins or superadmins can list tables.
     * @allow (create) Only tenant admins of the specified tenant.
     * @allow (update) Only tenant admins of the specified tenant.
     * @allow (delete) Only tenant admins of the specified tenant.
     * @deny (create) Non-tenant admins cannot create tables.
     * @deny (update) Non-tenant admins cannot update tables.
     * @deny (delete) Non-tenant admins cannot delete tables.
     * @principle Enforces tenant-based access control.
     */
    match /tenants/{tenantId}/tables/{tableId} {
      allow get: if isSignedIn();
      allow list: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow create: if isTenantAdmin(tenantId) && request.resource.data.tenantId == tenantId;
      allow update: if isTenantAdmin(tenantId) && request.resource.data.tenantId == resource.data.tenantId;
      allow delete: if isTenantAdmin(tenantId) && resource.data.tenantId == data.tenantId;
    }
  }
}