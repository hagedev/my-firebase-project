rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Super admin can perform any action on the tenants collection
    match /tenants/{tenantId=**} {
      allow read, write: if request.auth.uid == 'ttFbsVWt14cdTwVlKs1AbgBLUtx1';
    }
  }
}
