/**
 * @file Firestore Security Rules for AirCafe
 * @version Prototyping Mode - Authorization Focused
 *
 * @description
 * This ruleset enforces a multi-tenant security model for the AirCafe application.
 * It provides granular access control based on user roles (superadmin, admin_kafe, anonymous) and tenant affiliation.
 *
 * Data Structure:
 * - /tenants/{tenantId}: Stores cafe (tenant) profiles, accessible by superadmin and the tenant's admin.
 * - /users/{userId}: Stores user profiles, accessible by superadmin.
 * - /tenants/{tenantId}/menus/{menuId}: Stores menu items, accessible by the tenant's admin.
 * - /tenants/{tenantId}/categories/{categoryId}: Stores menu categories, accessible by the tenant's admin.
 * - /tenants/{tenantId}/orders/{orderId}: Stores orders, accessible by the tenant's admin, and create accessible by anonymous users.
 * - /tenants/{tenantId}/tables/{tableId}: Stores tables, accessible by the tenant's admin.
 * - /roles_superadmin/{userId}: Documents indicating superadmin privileges; read-only by server.
 *
 * Key Security Decisions:
 * - Superadmins have full CRUD access to tenants and users.
 * - Tenant admins (admin_kafe) have full CRUD access to menus and categories, and read/update access to tables within their tenant.
 * - Anonymous users can create orders with a valid verification token.
 * - Listing of users is denied to prevent information disclosure.
 * - All write operations require authentication.
 *
 * Denormalization for Authorization:
 * - Tenant ID is included in Menu, Category, Order and Table documents to simplify tenant-based access control.
 * - The User document stores the tenantId for admins, linking them to a specific tenant.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure root access.
     * @path /
     * @allow (get, list) if false
     * @deny (create, update, delete) if true
     * @principle Prevents unauthorized access to the root of the database.
     */
    match /{document=**} {
       allow get: if false;
       allow list: if false;
       allow create: if false;
       allow update: if false;
       allow delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/roles_superadmin/$(request.auth.uid));
    }

    function isAdminKafeForTenant(tenantId) {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin_kafe';
    }

    /**
     * @description Manages Tenant profiles. Superadmins can perform CRUD operations. Tenant admins can update their own tenant.
     * @path /tenants/{tenantId}
     * @allow (get, list) if isSuperAdmin()
     * @allow (create) if isSuperAdmin()
     * @allow (update, delete) if isSuperAdmin()
     * @allow (update) if isAdminKafeForTenant(tenantId)
     * @deny (create, update, delete) if !isSignedIn()
     * @deny (create, update, delete) if !isSuperAdmin() && !isAdminKafeForTenant(tenantId)
     * @principle Enforces role-based access control for Tenant profiles.
     */
    match /tenants/{tenantId} {
      allow get, list: if isSuperAdmin();
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() || isAdminKafeForTenant(tenantId);
      allow delete: if isSuperAdmin();
    }

    /**
     * @description Manages User profiles.  Superadmins can perform CRUD operations.
     * @path /users/{userId}
     * @allow (get, list) if isSuperAdmin()
     * @allow (create) if isSuperAdmin()
     * @allow (update, delete) if isSuperAdmin()
     * @deny (create, update, delete) if !isSignedIn()
     * @deny (create, update, delete) if !isSuperAdmin()
     * @principle Enforces role-based access control for User profiles.
     */
    match /users/{userId} {
      allow get, list: if isSuperAdmin();
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    /**
     * @description Manages Menu items for a specific tenant. Tenant admins can perform CRUD operations within their tenant.
     * @path /tenants/{tenantId}/menus/{menuId}
     * @allow (get, list) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @allow (create) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @allow (update) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @allow (delete) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @deny (create, update, delete) if !isSignedIn()
     * @deny (create, update, delete) if !isAdminKafeForTenant(tenantId)
     * @principle Enforces tenant-based access control for Menu items.
     */
    match /tenants/{tenantId}/menus/{menuId} {
      allow get, list: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow create: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow update: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow delete: if isSignedIn() && isAdminKafeForTenant(tenantId);
    }

    /**
     * @description Manages Menu categories for a specific tenant. Tenant admins can perform CRUD operations within their tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (get, list) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @allow (create) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @allow (update) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @allow (delete) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @deny (create, update, delete) if !isSignedIn()
     * @deny (create, update, delete) if !isAdminKafeForTenant(tenantId)
     * @principle Enforces tenant-based access control for Menu categories.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      allow get, list: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow create: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow update: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow delete: if isSignedIn() && isAdminKafeForTenant(tenantId);
    }

    /**
     * @description Manages Orders for a specific tenant. Tenant admins can perform CRUD operations within their tenant. Customers can create orders if the verification token matches.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (get, list) if isSignedIn() && isAdminKafeForTenant(tenantId)
     * @allow (create) if request.resource.data.verificationToken == get(/databases/$(database)/documents/tenants/$(tenantId)).data.tokenHarian;
     * @allow (update) if isSignedIn() && isAdminKafeForTenant(tenantId);
     * @allow (delete) if isSignedIn() && isAdminKafeForTenant(tenantId);
     * @deny (create, update, delete) if !isSignedIn() && !(request.resource.data.verificationToken == get(/databases/$(database)/documents/tenants/$(tenantId)).data.tokenHarian);
     * @deny (create, update, delete) if !isAdminKafeForTenant(tenantId)
     * @principle Enforces tenant-based access control for Orders. Allows anonymous order creation with token verification.
     */
    match /tenants/{tenantId}/orders/{orderId} {
      allow get, list: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow create: if request.resource.data.verificationToken == get(/databases/$(database)/documents/tenants/$(tenantId)).data.tokenHarian;
      allow update: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow delete: if isSignedIn() && isAdminKafeForTenant(tenantId);
    }

    /**
     * @description Manages Tables for a specific tenant. Tenant admins can perform read and update operations within their tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (get, list) if isSignedIn() && isAdminKafeForTenant(tenantId);
     * @allow (update) if isSignedIn() && isAdminKafeForTenant(tenantId);
     * @deny (create, delete) if true;
     * @deny (update) if !isSignedIn()
     * @deny (update) if !isAdminKafeForTenant(tenantId)
     * @principle Enforces tenant-based access control for Tables.
     */
    match /tenants/{tenantId}/tables/{tableId} {
      allow get, list: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow create: if false;
      allow update: if isSignedIn() && isAdminKafeForTenant(tenantId);
      allow delete: if false;
    }

    /**
     * @description Superadmin Role. This collection stores documents indicating superadmin role. Existence of a document for a user ID implies superadmin privileges. Locked from client-side writes.
     * @path /roles_superadmin/{userId}
     * @allow get: if isSuperAdmin();
     * @allow list: if false;
     * @deny (create, update, delete) if true
     * @principle Restricts write access to superadmin role documents.
     */
     match /roles_superadmin/{userId} {
        allow get: if isSuperAdmin();
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
     }
  }
}