rules_version = '2';

service cloud.firestore {
  database {
    // Super admin full access to tenants
    match /tenants/{tenantId} {
      allow read, write: if request.auth.uid == 'ttFbsVWt14cdTwVlKs1AbgBLUtx1';
    }

    match /tenants {
       allow read, write: if request.auth.uid == 'ttFbsVWt14cdTwVlKs1AbgBLUtx1';
    }

    // Super admin full access to users
    match /users/{userId} {
      allow read, write: if request.auth.uid == 'ttFbsVWt14cdTwVlKs1AbgBLUtx1';
    }

    match /users {
       allow read, write: if request.auth.uid == 'ttFbsVWt14cdTwVlKs1AbgBLUtx1';
    }
  }
}
