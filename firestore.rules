/**
 * @file Firebase Security Rules for AirCafe Application
 *
 * @description This ruleset enforces a multi-tenant data model where each cafe (tenant) has its own set of data (menus, categories, orders, tables).
 *   Users are specific to a tenant and have an 'admin_kafe' role. Superadmins are managed in a separate collection.
 *
 * @data_structure
 * - /tenants/{tenantId}: Stores tenant profile information.
 * - /users/{userId}: Stores user profile information. User ID corresponds to Firebase Auth UID.
 * - /roles_superadmin/{userId}: Stores superadmin role assignments.
 * - /tenants/{tenantId}/menus/{menuId}: Stores menu items for a tenant.
 * - /tenants/{tenantId}/categories/{categoryId}: Stores menu categories for a tenant.
 * - /tenants/{tenantId}/orders/{orderId}: Stores orders for a tenant.
 * - /tenants/{tenantId}/tables/{tableId}: Stores tables for a tenant.
 *
 * @key_security_decisions
 * - Users can only read/write their own profile data.
 * - Only authenticated users can access tenant-specific data.
 * - Data validation is relaxed in this prototyping phase, focusing on authorization and relationship integrity.
 * - Superadmin role is validated using the `roles_superadmin` collection.
 * - List operations are generally restricted to the owner tenant, unless explicitly allowed otherwise.
 *
 * @denormalization_for_authorization
 * - User documents store the tenantId to simplify authorization checks for tenant-specific data.
 * - Superadmin status is checked via a dedicated collection `roles_superadmin`.
 *
 * @structural_segregation
 * - Superadmin roles are kept in a separate collection for clear separation of concerns and efficient querying.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants access to tenant documents.
     * @path /tenants/{tenantId}
     * @allow (get, list): Public access to tenant information.
     * @allow (create, update, delete): Only superadmins can manage tenants.
     * @deny (create, update, delete): Non-superadmins cannot manage tenants.
     * @principle Public read, superadmin-only write access for tenant information.
     */
    match /tenants/{tenantId} {
      allow get, list: if true;
      allow create, update, delete: if isSuperAdmin();
    }

    /**
     * @description Grants access to user documents.
     * @path /users/{userId}
     * @allow (get, update, delete): Only the user can access their own profile data.
     * @allow (create): Only the user can create their own profile.
     * @deny (get, update, delete): Other users cannot access this user's profile data.
     * @principle Enforces user-ownership for profile management.
     */
    match /users/{userId} {
      allow get, update, delete: if isOwner(userId);
      allow create: if isSelfCreating(userId);
      allow list: if false; // Prevent listing all users.
    }

     /**
      * @description Grants access to superadmin role documents.
      * @path /roles_superadmin/{userId}
      * @allow get: if isSuperAdmin();
      * @allow create: if isSuperAdmin();
      * @allow update: if false; // Superadmin roles should not be updated directly via client.
      * @allow delete: if isSuperAdmin();
      * @allow list: if isSuperAdmin();
      * @principle Only existing superadmins can view, create, and delete other superadmin role assignments.
      */
    match /roles_superadmin/{userId} {
        allow get, list: if isSuperAdmin();
        allow create: if isSuperAdmin();
        allow update, delete: if false;
    }

    /**
     * @description Grants access to menu documents within a tenant.
     * @path /tenants/{tenantId}/menus/{menuId}
     * @allow (get, list): Any authenticated user can read menu items.
     * @allow (create, update, delete): Only the tenant admin can manage menu items.
     * @deny (create, update, delete): Non-tenant admins cannot manage menu items.
     * @principle Tenant-level access control for menu management.
     */
    match /tenants/{tenantId}/menus/{menuId} {
      allow get, list: if isSignedIn();
      allow create: if isTenantAdmin(tenantId);
      allow update: if isExistingTenantAdmin(tenantId);
      allow delete: if isExistingTenantAdmin(tenantId);
    }

    /**
     * @description Grants access to category documents within a tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (get, list): Any authenticated user can read categories.
     * @allow (create, update, delete): Only the tenant admin can manage categories.
     * @deny (create, update, delete): Non-tenant admins cannot manage categories.
     * @principle Tenant-level access control for category management.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create: if isTenantAdmin(tenantId);
      allow update: if isExistingTenantAdmin(tenantId);
      allow delete: if isExistingTenantAdmin(tenantId);
    }

    /**
     * @description Grants access to order documents within a tenant.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (get, list): Any authenticated user can read orders.
     * @allow (create, update, delete): Only the tenant admin can manage orders.
     * @deny (create, update, delete): Non-tenant admins cannot manage orders.
     * @principle Tenant-level access control for order management.
     */
    match /tenants/{tenantId}/orders/{orderId} {
      allow get, list: if isSignedIn();
      allow create: if isTenantAdmin(tenantId);
      allow update: if isExistingTenantAdmin(tenantId);
      allow delete: if isExistingTenantAdmin(tenantId);
    }

    /**
     * @description Grants access to table documents within a tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (get, list): Any authenticated user can read tables.
     * @allow (create, update, delete): Only the tenant admin can manage tables.
     * @deny (create, update, delete): Non-tenant admins cannot manage tables.
     * @principle Tenant-level access control for table management.
     */
    match /tenants/{tenantId}/tables/{tableId} {
      allow get, list: if isSignedIn();
      allow create: if isTenantAdmin(tenantId);
      allow update: if isExistingTenantAdmin(tenantId);
      allow delete: if isExistingTenantAdmin(tenantId);
    }

    // ---- Helper functions ----

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document.
     * @param {string} userId - The user ID to check against.
     * @return {boolean} True if the user is the owner, false otherwise.
     * @example allow read: if isOwner(userId); // Grants read access only to the user with ID userId.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is creating their own user document.
     * @param {string} userId - The user ID to check against.
     * @return {boolean} True if the user is creating their own document, false otherwise.
     */
    function isSelfCreating(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is a tenant admin for the given tenant.
     * @param {string} tenantId - The tenant ID to check against.
     * @return {boolean} True if the user is a tenant admin, false otherwise.
     */
    function isTenantAdmin(tenantId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

     /**
      * @description Checks if the user is an existing tenant admin for the given tenant.
      * Also ensures that the document exists.
      * @param {string} tenantId - The tenant ID to check against.
      * @return {boolean} True if the user is a tenant admin, false otherwise.
      */
    function isExistingTenantAdmin(tenantId) {
        return resource != null && isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    /**
     * @description Checks if the user has a 'superadmin' role.
     * @return {boolean} True if the user is a superadmin, false otherwise.
     * @example allow write: if isSuperAdmin(); // Grants write access only to superadmins.
     */
    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_superadmin/$(request.auth.uid));
    }
  }
}