/**
 * @file Firestore Security Rules for AirCafe
 * @description This ruleset enforces a multi-tenant security model with role-based access control,
 *              where each tenant's data is isolated.
 *
 * Data Structure:
 * - /tenants/{tenantId}: Stores tenant-specific data and configuration.
 * - /users/{userId}: Stores user profiles. Each user is associated with a tenant and has a role (admin_kafe, superadmin).
 * - /roles_superadmin/{userId}: Documents are created here when a user is granted superadmin roles.
 * - /tenants/{tenantId}/menus/{menuId}: Stores menu items for each tenant.
 * - /tenants/{tenantId}/categories/{categoryId}: Stores menu categories for each tenant.
 * - /tenants/{tenantId}/orders/{orderId}: Stores orders for each tenant.
 * - /tenants/{tenantId}/tables/{tableId}: Stores table information for each tenant.
 *
 * Key Security Decisions:
 * - Users can only create their own profile. Tenant assignment and roles must be managed via backend functions.
 * - Superadmin role is managed via `roles_superadmin` collection membership.
 * - All tenant-specific data (menus, categories, orders, tables) are secured to only be accessible by users
 *   belonging to that tenant.
 * - Data validation is relaxed in this prototype phase, focusing on tenant and role-based access control.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to create their profile. Tenant assignment and roles must be managed via backend functions.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user_abc' can create document /users/user_abc
     * @deny (create) - User with UID 'user_abc' cannot create document /users/user_xyz
     * @allow (get, list, update, delete) - A superadmin can get, list, update or delete any user profile
     * @deny (get, list, update, delete) - Non-superadmins cannot get, list, update, or delete other user profiles.
     * @principle Enforces user-ownership for profile creation and restricts profile management to superadmins.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isSuperAdmin() {
        return exists(/databases/$(database)/documents/roles_superadmin/$(request.auth.uid));
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow get: if isSuperAdmin() || isOwner(userId);
      allow list: if isSuperAdmin();
      allow update: if isSuperAdmin() || (isSignedIn() && isOwner(userId) && resource.data.id == userId);
      allow delete: if isSuperAdmin();
    }

    /**
     * @description Manages superadmin roles via document existence in this collection.
     * @path /roles_superadmin/{userId}
     * @allow (create) - Only a backend function can create this document.
     * @deny (create) - No client-side creation allowed.
     * @allow (get, list) - Always returns a 403 when read from the client
     * @deny (update, delete) - No client-side updates or deletes allowed.
     * @principle Restricts superadmin role assignment to backend functions only.
     */
    match /roles_superadmin/{userId} {
      allow create: if false;
      allow get: if false;
      allow list: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Stores cafe tenant profiles and configuration data.
     * @path /tenants/{tenantId}
     * @allow (get, list) - Anyone can read the list of tenants.
     * @allow (create) - Only a superadmin can create a tenant.
     * @allow (update, delete) - Only a superadmin can update or delete a tenant.
     * @principle Tenant creation and modification restricted to superadmins.
     */
    match /tenants/{tenantId} {
        function isSignedIn() {
            return request.auth != null;
        }

        function isSuperAdmin() {
            return exists(/databases/$(database)/documents/roles_superadmin/$(request.auth.uid));
        }

        allow get, list: if true;
        allow create: if isSignedIn() && isSuperAdmin();
        allow update: if isSignedIn() && isSuperAdmin();
        allow delete: if isSignedIn() && isSuperAdmin();
    }

    /**
     * @description Stores menu items for a specific tenant.
     * @path /tenants/{tenantId}/menus/{menuId}
     * @allow (get, list) - Anyone can read the menu.
     * @allow (create, update, delete) - Only tenant admins can manage menus.
     * @principle Tenant admins manage their own menus.
     */
    match /tenants/{tenantId}/menus/{menuId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isTenantAdmin(tenantId) {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin_kafe';
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isTenantAdmin(tenantId);
      allow update: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
      allow delete: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
    }

    /**
     * @description Stores menu categories for a specific tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (get, list) - Anyone can read the categories.
     * @allow (create, update, delete) - Only tenant admins can manage categories.
     * @principle Tenant admins manage their own categories.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isTenantAdmin(tenantId) {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin_kafe';
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isTenantAdmin(tenantId);
      allow update: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
      allow delete: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
    }

    /**
     * @description Stores orders placed at a specific tenant.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (get, list) - Only tenant admins can read orders.
     * @allow (create) - Anyone can create an order.
     * @allow (update, delete) - Only tenant admins can update or delete orders.
     * @principle Tenant admins manage their own orders. Anyone can create an order.
     */
    match /tenants/{tenantId}/orders/{orderId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isTenantAdmin(tenantId) {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin_kafe';
      }

      allow get, list: if isSignedIn() && isTenantAdmin(tenantId);
      allow create: if true;
      allow update: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
      allow delete: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
    }

    /**
     * @description Stores tables for a specific tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (get, list) - Only tenant admins can read the list of tables
     * @allow (create, update, delete) - Only tenant admins can create, update, or delete tables.
     * @principle Tenant admins manage their own tables.
     */
    match /tenants/{tenantId}/tables/{tableId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isTenantAdmin(tenantId) {
        return exists(/databases/$(database)/documents/users/$(request.auth.uid))
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId
            && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin_kafe';
      }

      allow get, list: if isSignedIn() && isTenantAdmin(tenantId);
      allow create: if isSignedIn() && isTenantAdmin(tenantId);
      allow update: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
      allow delete: if isSignedIn() && isTenantAdmin(tenantId) && resource != null;
    }
  }
}