/**
 * @file Firestore Security Rules
 * @version 2
 *
 * @description
 * This ruleset enforces a multi-tenant security model for the AirCafe application.
 * It ensures data isolation between tenants and implements role-based access control.
 *
 * @dataStructure
 * - /tenants/{tenantId}: Tenant profiles and configuration.
 * - /users/{userId}: User profiles, including role and tenant assignment.
 * - /tenants/{tenantId}/menus/{menuId}: Menu items for each tenant.
 * - /tenants/{tenantId}/categories/{categoryId}: Menu categories for each tenant.
 * - /tenants/{tenantId}/orders/{orderId}: Orders placed at each tenant.
 * - /tenants/{tenantId}/tables/{tableId}: Tables for each tenant.
 * - /roles_superadmin/{userId}: Documents denoting superadmin privileges.
 *
 * @keySecurityDecisions
 * - Strict tenant data isolation: Users can only access data within their assigned tenant.
 * - Role-based access control: Superadmins have access to all tenants; other roles are tenant-specific.
 * - Anti-spam measures: Order creation requires a valid verification token.
 * - List operations restricted to owners or superadmins for tenant-specific subcollections.
 *
 * @denormalizationForAuthorization
 * - The `tenantId` field is duplicated in all subcollections under `/tenants/{tenantId}` (menus, categories, tables, orders) to enable authorization independence.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants access to tenant profile data.
     * @path /tenants/{tenantId}
     * @allow (get) Anyone can read tenant profile information.
     * @allow (create, update, delete) Only superadmins can manage tenant data.
     * @deny (create, update, delete) Non-superadmins cannot manage tenant data.
     * @principle Restricts tenant management to superadmins.
     */
    match /tenants/{tenantId} {
      allow get: if true;
      allow list: if false;
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    /**
     * @description Grants access to user profile data.
     * @path /users/{userId}
     * @allow (get, update, delete) Only the user themselves or a superadmin can access/modify their profile.
     * @allow (create) A user can create their own profile if the userId matches their auth UID.
     * @deny (create) Users cannot create profiles for other users.
     * @deny (list) Listing users is disallowed.
     * @principle Enforces user ownership and restricts user management to superadmins.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isSuperAdmin();
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isSuperAdmin();
      allow delete: if isOwner(userId) || isSuperAdmin();
    }

    /**
     * @description Grants access to menu items for a specific tenant.
     * @path /tenants/{tenantId}/menus/{menuId}
     * @allow (get, list) Anyone can read menu items for a specific tenant.
     * @allow (create, update, delete) Only admins for the tenant or superadmins can manage menu items.
     * @deny (create, update, delete) Non-admins cannot manage menu items.
     * @principle Enforces tenant-specific access for menu management.
     */
    match /tenants/{tenantId}/menus/{menuId} {
      allow get: if true;
      allow list: if true;
      allow create: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow update: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow delete: if isTenantAdmin(tenantId) || isSuperAdmin();
    }

    /**
     * @description Grants access to menu categories for a specific tenant.
     * @path /tenants/{tenantId}/categories/{categoryId}
     * @allow (get, list) Anyone can read categories for a specific tenant.
     * @allow (create, update, delete) Only admins for the tenant or superadmins can manage categories.
     * @deny (create, update, delete) Non-admins cannot manage categories.
     * @principle Enforces tenant-specific access for category management.
     */
    match /tenants/{tenantId}/categories/{categoryId} {
      allow get: if true;
      allow list: if true;
      allow create: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow update: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow delete: if isTenantAdmin(tenantId) || isSuperAdmin();
    }

    /**
     * @description Grants access to orders placed at a specific tenant.
     * @path /tenants/{tenantId}/orders/{orderId}
     * @allow (get, list) Only admins for the tenant or superadmins can access orders.
     * @allow (create) Any authenticated user can create an order if the verification token is valid.
     * @allow (update, delete) Only admins for the tenant or superadmins can manage orders.
     * @deny (create) Orders with invalid verification tokens are rejected.
     * @deny (update, delete) Non-admins cannot manage orders.
     * @principle Enforces tenant-specific access for order management and implements anti-spam measures.
     */
    match /tenants/{tenantId}/orders/{orderId} {
      allow get: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow list: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow create: if isValidVerificationToken(tenantId) && isTenantOrder(tenantId);
      allow update: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow delete: if isTenantAdmin(tenantId) || isSuperAdmin();
    }

    /**
     * @description Grants access to tables for a specific tenant.
     * @path /tenants/{tenantId}/tables/{tableId}
     * @allow (get, list) Anyone can read tables for a specific tenant.
     * @allow (create, update, delete) Only admins for the tenant or superadmins can manage tables.
     * @deny (create, update, delete) Non-admins cannot manage tables.
     * @principle Enforces tenant-specific access for table management.
     */
    match /tenants/{tenantId}/tables/{tableId} {
      allow get: if true;
      allow list: if true;
      allow create: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow update: if isTenantAdmin(tenantId) || isSuperAdmin();
      allow delete: if isTenantAdmin(tenantId) || isSuperAdmin();
    }

    /**
     * @description Grants superadmin privileges based on document existence in this collection.
     * @path /roles_superadmin/{userId}
     * @allow (get, create, update, delete) Only authenticated users can manage their superadmin status (for initial setup). After initial setup, this can be restricted.
     * @deny (list) Listing of superadmins is disallowed.
     * @principle DBAC - Existence of document grants superadmin role.
     */
    match /roles_superadmin/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // Added to fix error reported. Listing all orders should be restricted to superadmins
    match /{anypath}/orders/{orderId} {
        allow list: if isSuperAdmin();
        allow get: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      return exists(/databases/$(database)/documents/roles_superadmin/$(request.auth.uid));
    }

    function isTenantAdmin(tenantId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    function isValidVerificationToken(tenantId) {
      return request.auth != null && request.resource.data.verificationToken == get(/databases/$(database)/documents/tenants/$(tenantId)).data.tokenHarian;
    }

    function isTenantOrder(tenantId) {
          return request.resource.data.tenantId == tenantId;
    }
  }
}