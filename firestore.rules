
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isSuperAdmin() {
      return request.auth.uid == 'ttFbsVWt14cdTwVlKs1AbgBLUtx1';
    }

    function isCafeAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin_kafe';
    }

    // =================================
    // Collection: tenants
    // =================================
    match /tenants/{tenantId} {
      // Super Admin bisa melakukan apa saja
      allow read, write: if isSuperAdmin();

      // Admin Kafe hanya bisa mengupdate tenant mereka sendiri (misal: token harian)
      allow update: if isCafeAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;

      // Siapa pun (termasuk user belum login) bisa membaca daftar tenant dan detailnya
      allow list, get: if true;
    }

    // =_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=_=
    //  Collection: users
    // =================================
    match /users/{userId} {
      // Super Admin bisa melakukan apa saja
      allow read, write: if isSuperAdmin();

      // Pengguna hanya bisa membaca dan mengedit data mereka sendiri
      allow read, update: if request.auth.uid == userId;
    }
    
    // =================================
    // Tenant Sub-collections
    // =================================
    match /tenants/{tenantId}/{collection}/{docId} {
        // Super Admin bisa melakukan apa saja
        allow read, write: if isSuperAdmin();

        // Admin Kafe bisa melakukan apa saja di dalam tenant mereka
        allow read, write: if isCafeAdmin() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }
  }
}
